          <param name="secure:github_access_token" value="credentialsJSON:56ffcc70-5d73-4152-8922-859c6b45e2f5" />
          <param name="vcsRootId" value="ProTouchApiSimulator_Windows_Protouch3" />
        </parameters>
      </extension>
    </build-extensions>
    <artifact-dependencies>
      <dependency id="ARTIFACT_DEPENDENCY_1" sourceBuildTypeId="ProTouch3_Linux_Builder" cleanDestination="false">
        <revisionRule name="lastSuccessful" revision="latest.lastSuccessful" branch="%teamcity.build.branch%" />
        <artifact sourcePath="*.deb  =&gt; publication&#xD;&#xA;" />
      </dependency>
      <dependency id="ARTIFACT_DEPENDENCY_3" sourceBuildTypeId="ProTouch3_Windows_Builder" cleanDestination="false">
        <revisionRule name="lastSuccessful" revision="latest.lastSuccessful" branch="%teamcity.build.branch%" />
        <artifact sourcePath="*.exe =&gt; publication&#xD;&#xA;" />
      </dependency>
    </artifact-dependencies>
    <cleanup />
  </settings>
</build-type>

